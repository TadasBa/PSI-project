<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Pantry.pages.RecipePage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ContentPage.Content>
        <StackLayout Padding="10,10,10,15">
            <StackLayout Orientation="Horizontal">
                <SearchBar
                x:Name="SearchFilter"
                Placeholder="Search for specific recipe"
                Text=""
                TextChanged="SearchBar_TextChanged" />
                <ImageButton Source="filter.jpg" HeightRequest="50" WidthRequest="50" Margin="-10, 0, 0, 0" Clicked="BtnRecipeFilter"/>
            </StackLayout>

            <CollectionView x:Name="recipeCollectionView">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="10">
                            <Frame CornerRadius="20" HasShadow="True"  BorderColor="DarkGray" Padding="10, 10, 10, 10">
                                <StackLayout Orientation="Horizontal">
                                    <Image Source="{Binding ImageSource}" HeightRequest="60" WidthRequest="60"/>
                                    <StackLayout VerticalOptions="CenterAndExpand" Orientation="Vertical">
                                        <Label Text ="{Binding Title}" FontSize="Medium"/>
                                        <Label Text="{Binding Type}" />
                                    </StackLayout>
                                </StackLayout>
                            </Frame>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>